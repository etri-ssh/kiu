<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SettingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <TextView
                    android:text="설정"
                    android:textColor="@color/main_black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_reset"
                    android:text="기본값"
                    android:textColor="@color/main_black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_save"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_save"
                    android:text="저장"
                    android:textColor="@color/main_black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/gubun"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/pale_grey"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mapbar"
                app:layout_constraintTop_toBottomOf="@id/gubun"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_map_title"
                    android:text="실내 지도"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_map_info_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_map_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/main_black"
                    android:text="서버 정보"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_map_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="http://heliosen2.duckdns.org:18080"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:ems="13"
                    app:layout_constraintBottom_toBottomOf="@id/tv_map_info_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_map_info_title" />
<!--                <TextView-->
<!--                    android:id="@+id/tv_map_info"-->
<!--                    app:layout_constraintTop_toTopOf="@id/tv_map_info_title"-->
<!--                    app:layout_constraintBottom_toBottomOf="@id/tv_map_info_title"-->
<!--                    app:layout_constraintRight_toRightOf="parent"-->
<!--                    android:layout_marginLeft="20dp"-->
<!--                    android:text="http://heliosen2.duckdns.org:18080"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->
                <TextView
                    tools:ignore="TextSizeCheck"
                    android:id="@+id/tv_auto_map"
                    android:text="자동 지도 ON/OFF"
                    android:textSize="15dp"
                    android:textColor="@color/main_black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_map_info_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/sch_auto_map"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/tv_auto_map"
                    app:layout_constraintBottom_toBottomOf="@id/tv_auto_map"
                    tools:ignore="UseSwitchCompatOrMaterialXml"/>
                <TextView
                    android:id="@+id/tv_map_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:text="지도 반경"
                    android:textSize="15dp"
                    android:textColor="@color/main_black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_auto_map"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_map_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:entries="@array/mapRadius"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/black"
                    app:layout_constraintTop_toTopOf="@id/tv_map_radius"
                    app:layout_constraintBottom_toBottomOf="@id/tv_map_radius"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
