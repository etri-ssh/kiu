                <TextView
                    tools:ignore="TextSizeCheck"
                    android:id="@+id/tv_signal_timer_title"
                    android:text="측위 주기 설정"
                    android:textSize="15dp"
                    android:textColor="@color/main_black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_signal_info_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_signal_timer"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    app:layout_constraintEnd_toStartOf="@id/tv_signal_ms"
                    app:layout_constraintTop_toTopOf="@id/tv_signal_timer_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_signal_timer_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_signal_ms"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_signal_timer_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_signal_timer_title"
                    android:text="ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:visibility="gone"
                    android:id="@+id/sp_signal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:entries="@array/ImporterMount"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/black"
                    app:layout_constraintTop_toTopOf="@id/tv_signal_timer_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_signal_timer_title"
                    app:layout_constraintRight_toRightOf="parent"/>


                <!--        BLE         -->
                <TextView
                    tools:ignore="TextSizeCheck"
                    android:id="@+id/tv_ble_timer_title"
                    android:text="BLE 주기"
                    android:textSize="15dp"
                    android:textColor="@color/main_black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_signal_timer_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
