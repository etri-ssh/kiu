                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_signal_title"
                    android:text="신호기반 측위"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/sch_signal"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/tv_signal_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_signal_title"
                    tools:ignore="UseSwitchCompatOrMaterialXml"/>
                <TextView
                    android:id="@+id/tv_signal_info_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_signal_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/main_black"
                    android:text="서버 정보"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_signal_info"
                    app:layout_constraintTop_toTopOf="@id/tv_signal_info_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_signal_info_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="20dp"
                    android:text="http://heliosen2.duckdns.org:18080"
                    android:textSize="15sp"
                    android:inputType="text"
